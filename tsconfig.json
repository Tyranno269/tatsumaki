{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "types": ["node", "vitest/globals"],
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "after": true,
        "useRootDirs": true,
        "extensions": {
          ".ts": ".js",
          ".tsx": ".js"
        }
      }
    ]
  },
  "include": ["src", "tsdown.config.ts"]
}
